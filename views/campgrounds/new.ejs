<%- include('../partials/header') %>

    <main class="container">
        <h1 class="text-center mb-4">Create a New Campground</h1>
        
        <form class="w-50 m-auto" action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" placeholder="New Campground" required />
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" placeholder="Image URL" required />
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" name="campground[description]" placeholder="Campground Description" />
            </div>
        
            <button class="btn btn-primary btn-block" type="submit">Add Campground</button>
            
            <a class="btn btn-link" href="/campgrounds">Go Back</a>
        </form>
    </main>

<%- include('../partials/footer') %>