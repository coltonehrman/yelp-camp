<%- include('../partials/header') %>
    
    <div class="container">
        <h2>
            <%= campground.name %>
            <a class="btn btn-link align-middle" href="/campgrounds">Back</a>
        </h2>

        <figure class="figure text-center d-block">
            <img style="max-height: 350px" class="figure-img img-fluid rounded" src="<%= campground.image %>" />
            
            <% if (campground.description) { %>
                <figcaption class="figure-caption text-center">
                    <h4><%= campground.description %></h4>
                </figcaption>
            <% } %>
        </figure>
        
        <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-info mb-3">Add Comment</a>
        
        <% if (campground.comments.length !== 0) { %>
            <div class="card mb-3">
                <div class="card-header">
                    Comments
                </div>
                
                <% campground.comments.forEach(comment => { %>
                    <div class="card-body border-bottom">
                        <blockquote class="blockquote mb-0">
                            <p><%= comment.text %></p>
                            <footer class="blockquote-footer">
                                <strong><%= comment.author %></strong>
                            </footer>
                        </blockquote>
                    </div>
                <% }); %>
                
            </div>
        <% } %>
    </div>

<%- include('../partials/footer') %>