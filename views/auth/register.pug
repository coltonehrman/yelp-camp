extends ../base

block vars
    - const style = '/css/forms.css'

block body
    main(class="container")
        form(class="form-signin text-center" action="/register" method="POST")
            h1(class="h3 mb-3") Registration Form
            
            label(for="username" class="sr-only") Username
            input#username(type="text" class="form-control" placeholder="Username" name="username" required autofocus)/
            
            label(for="email" class="sr-only") Email address
            input#email(type="email" class="form-control" placeholder="Email address" name="email" required)/
            
            label(for="password" class="sr-only") Password
            input#password(type="password" class="form-control" placeholder="Password" name="password" required)/
            
            button(class="btn btn-lg btn-primary btn-block" type="submit") Register