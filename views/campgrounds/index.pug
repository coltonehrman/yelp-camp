extends ../base

block body
    div(class="container")
        header(class="jumbotron")
            h1 Welcome to YelpCamp
            
            p View our handpicked campgrounds from all over the world!
            
            p
                a(href="/" class="btn btn-outline-secondary") Go Back
                a(href="/campgrounds/new" class="btn btn-outline-primary") Add Campgrounds
        
        main(class="row")
            each campground in campgrounds
                
                article(class="col-lg-3 col-md-4 col-sm-6")
                    
                    figure(class="figure")
                        
                        img(class="figure-img img-fluid rounded" src=campground.image)/
                        
                        figcaption(class="figure-caption text-center")
                            h4
                                a(href="/campgrounds/" + campground._id)= campground.name
                            .
                                Comments #[span(class="badge badge-pill badge-light")= campground.comments.length]
                                